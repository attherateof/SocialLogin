use Magento\Framework\Escaper;
use MageStack\SocialLogin\Block\Link;

/**
 * @var Escaper $escaper
 * @var Link $block
 */

$loginLinks = $block->getLoginLinks();
?>

<?php if (!empty($loginLinks)): ?>
    <?php foreach ($loginLinks as $provider => $data): ?>
        <?php if ($data['is_enabled']): ?>
            <a href="<?= $escaper->escapeHtmlAttr($data['url']['login']) ?>" class="action login primary">
                <?= $escaper->escapeHtml($this->labelFormatter($provider)) ?>
            </a>
        <?php endif; ?>
    <?php endforeach; ?>
<?php endif; ?>